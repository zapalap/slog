    <div class="log-view-titlebar"> 
        <div class="log-view-title">Slog --- demo HUD</div>
    </div>
        <div class="log-view">
            {{#each model as |logEntry|}}
            <div class="log-line">
                <div {{action "markEntry" logEntry}}class="hexagon {{if logEntry.isMarked "marked"}}"></div><div class="log-entry"><span class="timestamp"><span class="bracket">[</span>{{logEntry.timestamp}}<span class="bracket">]</span></span>  {{logEntry.verboseMessage}}</div>
            </div>
            {{else}}
                <div class="placeholder-message">Nothing to see here...</div>
          {{/each}}
      </div>
   