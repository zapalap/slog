<div class="log-view-titlebar" data-spy="affix">
    <div class="log-view-title">Source: some random logs
        <div class="pull-right">
        {{#if atLeastOneMarked}}
            {{#dynamic-menu onClearAll=(action "clearAllSelectedLogLines") onDimAllNotSelected=(action "dimAllNotSelectedLogLines")}} 
            {{/dynamic-menu}}
        {{/if}}
        </div>
    </div>
</div>

<div class="log-view">
  {{#each logEntryList as |logEntry|}}
    {{#log-line logEntry=logEntry onMark=(action "lineMarked" logEntry) onUnmark=(action "lineUnmarked" logEntry)}}
    {{/log-line}}
  {{else}}
      <div class="placeholder-message">Nothing to see here...</div>
  {{/each}}
</div>